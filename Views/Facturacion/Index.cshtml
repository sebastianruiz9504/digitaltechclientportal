@using System.Globalization
@model DigitalTechClientPortal.Web.Models.FacturasViewModel

@{
    ViewData["Title"] = "Facturación";
    var co = CultureInfo.GetCultureInfo("es-CO");
    var total = Model?.Facturas?.Count ?? 0;
}

<div class="w-full px-4 sm:px-6 lg:px-8 py-8">
    <!-- Encabezado -->
    <header class="mb-6">
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900">Facturación</h1>
        <p class="mt-2 text-slate-500">Resumen de documentos emitidos y montos asociados.</p>
    </header>

    @if (total == 0)
    {
        <!-- Estado vacío -->
        <section class="rounded-2xl border border-slate-200 bg-white p-10 text-center shadow-sm">
            <h2 class="text-lg font-medium text-slate-900">No hay facturas para mostrar</h2>
            <p class="mt-2 text-slate-500">Cuando se generen facturas, aparecerán aquí.</p>
        </section>
    }
    else
    {
        <!-- Meta/Resumen -->
        <div class="mb-4 flex items-center justify-between">
            <span class="text-sm text-slate-500">
                Mostrando <span class="font-medium text-slate-700">@total</span> @((total == 1) ? "factura" : "facturas")
            </span>
        </div>

        <!-- Tabla fluida dentro del área de contenido -->
        <div class="w-full overflow-x-auto">
            <table class="w-full table-auto border-collapse text-slate-700">
                <caption class="sr-only">Listado de facturas</caption>

                <thead class="bg-slate-50 text-slate-600 text-xs uppercase tracking-wide">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left font-medium">Número</th>
                        <th scope="col" class="px-6 py-3 text-left font-medium">Fecha</th>
                        <th scope="col" class="px-6 py-3 text-left font-medium">Monto</th>
                        <th scope="col" class="px-6 py-3 text-left font-medium">Estado</th>
                        <th scope="col" class="px-6 py-3 text-left font-medium">Documento</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-slate-200 bg-white">
                    @foreach (var f in Model.Facturas)
                    {
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 align-middle">
                                <span class="font-mono text-slate-900">@f.Numero</span>
                            </td>
                            <td class="px-6 py-4 align-middle">
                                @(f.Fecha?.ToString("dd MMM yyyy", co) ?? "—")
                            </td>
                            <td class="px-6 py-4 align-middle">
                                <span class="font-medium text-slate-900">
                                    @(f.MontoFormatted ?? (f.Monto.HasValue ? f.Monto.Value.ToString("C2", co) : "—"))
                                </span>
                            </td>
                            <td class="px-6 py-4 align-middle">
                                <span class="inline-flex items-center rounded-full border border-slate-300 px-2.5 py-1 text-xs font-medium text-slate-700 bg-slate-50">
                                    @(f.EstadoLabel ?? f.EstadoValue?.ToString() ?? "—")
                                </span>
                            </td>
                            <td class="px-6 py-4 align-middle">
                                @if (!string.IsNullOrWhiteSpace(f.PublicUrl))
                                {
                                    <a href="@f.PublicUrl"
                                       target="_blank"
                                       rel="noopener noreferrer"
                                       class="inline-flex items-center gap-2 rounded-md border border-slate-300 bg-white px-3 py-1.5 text-sm font-medium text-slate-700 hover:bg-slate-50 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-sky-400/40 focus:ring-offset-1 focus:ring-offset-white transition"
                                       title="Abrir documento en una nueva pestaña">
                                        ↗ Abrir
                                    </a>
                                }
                                else
                                {
                                    <span class="text-slate-400">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>