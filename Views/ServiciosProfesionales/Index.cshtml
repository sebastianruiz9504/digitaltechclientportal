@{
    ViewData["Title"] = "Servicios profesionales";
}

@section Head {
  <style>
    /* Se mantiene la estética base del portfolio cloud */
    .card-ring { box-shadow: 0 1px 0 rgba(16,24,40,.06), 0 1px 3px rgba(16,24,40,.08); }

    /* Botón negro con texto blanco para todas las tarjetas y CTA inferior */
    .btn-black {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border-radius: 0.5rem;
      padding: 0.375rem 0.75rem; /* px-3 py-1.5 */
      font-size: 0.75rem;        /* text-xs */
      font-weight: 600;          /* font-medium */
      color: #ffffff;
      background: #000000;
      border: 1px solid #3f3f46; /* neutral-700 */
      box-shadow: 0 4px 10px rgba(0,0,0,0.18);
      transition: transform .12s ease, box-shadow .2s ease, background-color .2s ease;
      text-decoration: none;
    }
    .btn-black:hover {
      background: #171717;       /* neutral-800 */
      transform: scale(1.02);
      box-shadow: 0 6px 14px rgba(0,0,0,0.22);
    }
  </style>
}

<!-- Encabezado: fondo negro y TODO el texto blanco -->
<section class="relative overflow-hidden rounded-2xl border bg-neutral-900">
  <div class="relative px-6 py-12 sm:px-10">
    <p class="text-xs uppercase tracking-wider text-white">Servicios</p>
    <h1 class="mt-2 text-3xl font-semibold tracking-tight text-white">Servicios profesionales</h1>
    <p class="mt-3 max-w-2xl text-white">
      Expertos en diseño, operación y seguridad para impulsar tu plataforma con soluciones robustas y medibles.
    </p>

    <div class="mt-6 flex flex-wrap gap-2">
      <a href="#outsourcing" class="rounded-full border px-3 py-1 text-xs text-white border-white hover:bg-neutral-800">Outsourcing</a>
      <a href="#sentinel" class="rounded-full border px-3 py-1 text-xs text-white border-white hover:bg-neutral-800">Microsoft Sentinel</a>
      <a href="#fabric" class="rounded-full border px-3 py-1 text-xs text-white border-white hover:bg-neutral-800">Microsoft Fabric</a>
      <a href="#automatizacion" class="rounded-full border px-3 py-1 text-xs text-white border-white hover:bg-neutral-800">Automatización</a>
      <a href="#apps" class="rounded-full border px-3 py-1 text-xs text-white border-white hover:bg-neutral-800">Desarrollo de apps</a>
      <a href="#auditorias" class="rounded-full border px-3 py-1 text-xs text-white border-white hover:bg-neutral-800">Auditorías</a>
    </div>
  </div>
</section>

