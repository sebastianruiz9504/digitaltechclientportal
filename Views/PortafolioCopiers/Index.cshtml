@model DigitalTechClientPortal.Web.Models.PortfolioCopiersViewModel
@{
    ViewData["Title"] = "Portafolio Copiers & Printing";
}

@section Head {
  <style>
    .card-ring { box-shadow: 0 1px 0 rgba(16,24,40,.06), 0 1px 3px rgba(16,24,40,.08); }
    .grad-copiers { background-image: linear-gradient(to right, #ef4444, #f97316, #facc15); }
  </style>
}

<!-- Hero -->
<section class="relative overflow-hidden rounded-2xl border bg-white">
  <div class="absolute inset-0 opacity-10 grad-copiers"></div>
  <div class="relative px-6 py-12 sm:px-10">
    <p class="text-xs uppercase tracking-wider text-slate-500">Portafolio</p>
    <h1 class="mt-2 text-3xl font-semibold tracking-tight text-ink">@Model.HeroTitle</h1>
    <p class="mt-3 max-w-2xl text-slate-600">@Model.HeroSubtitle</p>

    <div class="mt-6 flex flex-wrap gap-2">
      @foreach (var card in Model.Cards)
      {
        <a href="#@card.Slug" class="rounded-full border px-3 py-1 text-xs text-slate-600 hover:bg-slate-50">@card.Title</a>
      }
    </div>
  </div>
</section>

<!-- Cards -->
<section class="mt-8 grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
  @foreach (var c in Model.Cards)
  {
    <article id="@c.Slug" class="card-ring rounded-2xl border bg-white p-6">
      <div class="flex items-start gap-3">
        <!-- Icono -->
        <div class="h-10 w-10 rounded-lg bg-slate-100 grid place-content-center text-slate-700">
          @switch (c.IconKind)
          {
              case "building":
                  @:<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"><rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke-width="1.5"/><path d="M9 21V9h6v12" stroke-width="1.5"/></svg>
                  break;
              case "wrench":
                  @:<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M14.7 6.3a6 6 0 0 0-8.4 8.4l-4 4 3 3 4-4a6 6 0 0 0 8.4-8.4z" stroke-width="1.5"/></svg>
                  break;
              case "drop":
                  @:<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.32 0L12 2.69z" stroke-width="1.5"/></svg>
                  break;
              case "printer":
                  @:<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M6 9V2h12v7" stroke-width="1.5"/><rect x="6" y="13" width="12" height="8" rx="2" stroke-width="1.5"/></svg>
                  break;
              default:
                  @:<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"><rect x="4" y="4" width="16" height="16" rx="3" stroke-width="1.5"/></svg>
                  break;
          }
        </div>

        <!-- Contenido -->
        <div class="flex-1">
          <h3 class="text-base font-semibold text-slate-900">@c.Title</h3>
          <p class="mt-0.5 text-sm text-slate-600">@c.Subtitle</p>

          <ul class="mt-3 space-y-1.5">
            @foreach (var b in c.Bullets)
            {
              <li class="flex items-start gap-2 text-sm text-slate-700">
                <svg class="mt-0.5 h-4 w-4 text-emerald-600" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M20 6L9 17l-5-5" stroke-width="1.5"/></svg>
                <span>@b</span>
              </li>
            }
          </ul>

          <div class="mt-4 flex flex-wrap gap-2">
            @if (!string.IsNullOrWhiteSpace(c.CtaPrimaryHref))
            {
              <a href="@c.CtaPrimaryHref"
                 class="inline-flex items-center gap-2 rounded-lg px-3 py-1.5 text-xs font-medium text-white grad-copiers shadow-md border border-white/20 hover:shadow-lg hover:scale-[1.02] transition-all">
                @c.CtaPrimaryText
              </a>
            }
            @if (!string.IsNullOrWhiteSpace(c.CtaSecondaryHref))
            {
              <a href="@c.CtaSecondaryHref"
                 class="inline-flex items-center gap-2 rounded-lg px-3 py-1.5 text-xs font-medium text-slate-700 border border-slate-300 bg-white hover:bg-slate-50 transition">
                @c.CtaSecondaryText
              </a>
            }
          </div>
        </div>
      </div>
    </article>
  }
</section>

<!-- CTA final -->
<section id="contacto" class="mt-10 rounded-2xl border bg-white p-6 text-center">
  <h3 class="text-lg font-semibold text-slate-900">¿Listo para optimizar tu parque de impresión?</h3>
  <p class="mt-2 text-slate-600">Hablemos sobre tus necesidades de copiado, impresión y gestión documental, y diseñemos un plan a tu medida.</p>
  <div class="mt-4">
    <a href="https://wa.me/573001234567?text=Hola%20Digital%20Tech%2C%20quiero%20conocer%20el%20Portafolio%20Copiers"
       target="_blank" rel="noopener"
       class="inline-flex items-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white grad-copiers shadow-md border border-white/20 hover:shadow-lg hover:scale-[1.02] transition-all">
      Hablar por WhatsApp
    </a>
  </div>
</section>